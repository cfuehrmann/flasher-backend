{
  "defaultSeverity": "error",
  "extends": ["tslint:all", "tslint-config-prettier"],
  "jsRules": {},
  "rules": {
    "interface-over-type-literal": false,
    "no-console": false,
    "object-literal-sort-keys": false,
    "typedef": {
      "severity": "error",
      "options": [
        "property-declaration",
        "member-variable-declaration",
        "object-destructuring"
      ]
    },
    "file-name-casing": [true, "kebab-case"],
    "object-literal-shorthand": [true, "never"], // the shorthand obstructs renaming
    "comment-format": [true, "check-space"], // no check of upper or lower case, because impractical e.g. with multi-line comments
    "no-magic-numbers": false,
    "newline-before-return": false,
    "only-arrow-functions": false,
    "member-ordering": false,
    "prefer-template": false,
    "prefer-method-signature": false,
    "no-unused-variable": false,
    "completed-docs": false,
    "strict-type-predicates": false, // Not working with type "unknown"
    "no-object-literal-type-assertion": false
  },
  "rulesDirectory": []
}
