  "engines": {
    "node": ">=10.8.0"
  },
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch-build": "tsc -w",
    "test": "mocha --recursive ./dist/test/*.js",
    "watch-test": "mocha --watch --recursive ./dist/test/*.js",
    "lint": "tslint app/*.ts test/*.ts  -p \"tsconfig.json\" -t verbose",
