{
  "name": "gql-server",
  "version": "1.0.0",
  "engines": {
    "node": ">=10.8.0"
  },
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch-build": "tsc -w",
    "test": "mocha --recursive ./dist/test/*.js",
    "watch-test": "mocha --inspect -no-timeouts --watch --recursive ./dist/test/*.js",
    "lint": "tslint app/*.ts test/*.ts  -p \"tsconfig.json\" -t verbose",
    "watch-lint": "chokidar app/*.ts test/*.ts -c \"npm run lint\" --initial --verbose",
    "prettier": "prettier --write {app,test}/**/*.ts *.json",
    "start": "node dist/app/server.js",
    "debug": "node --inspect-brk dist/app/server.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-server": "^2.9.7",
    "bcrypt": "^4.0.1",
    "date-fns": "^2.12.0",
    "graphql": "^15.0.0",
    "jsonwebtoken": "^8.5.1",
    "uuid": "^8.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/mocha": "^7.0.2",
    "@types/uuid": "^7.0.3",
    "chokidar-cli": "^2.1.0",
    "husky": "^4.2.5",
    "mocha": "^7.1.2",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
