    "prettier": "prettier --write {app,test}/**/*.ts *.json"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-server": "^2.9.7",
    "bcrypt": "^3.0.6",
    "date-fns": "^2.7.0",
    "graphql": "^14.5.8",
    "jsonwebtoken": "^8.5.1",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/mocha": "^5.2.7",
    "@types/uuid": "^3.4.6",
    "chokidar-cli": "^2.1.0",
    "husky": "^3.0.9",
    "mocha": "^6.2.2",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
